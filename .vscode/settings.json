{
    "terminal.integrated.env.windows": {
        "_RUST_BACKTRACE": "full",
        "MIRIFLAGS": "-Zmiri-backtrace=full",
        "RUST_LOG": "trace",

        "_NO_HEADLESS": "1"
    },

    "spellright.ignoreFiles": [
        "**/.gitignore",
        "**/.spellignore",
        "**/*.toml"
    ],
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex"
    ]
}